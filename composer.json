{
    "name": "zwiazeksyndykalistowpolski/phpdenyhosts",
    "license": "LGPLv3",
    "type": "project",
    "description": "Analyzes unwanted traffic and blocks spam using htaccess",

    "require": {
        "php": ">=7.0",
        "kassner/log-parser": "^1.3",
        "monolog/monolog": "^1.22",
        "league/flysystem": "^1.0"
    },

    "post-install-cmd": [
        "composer dump-autoload -o"
    ],

    "autoload": {
        "psr-4": {
            "PhpDenyhosts\\": "src"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },

    "require-dev": {
        "symfony/var-dumper": "^3.2",
        "phpunit/phpunit": "^7.1"
    }
}
